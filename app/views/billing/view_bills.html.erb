<div class="container my-4">
  <h4 class="mb-4">Bills</h4>
  <div class="card">
    <div class="card-body p-0">
      <table class="table table-striped mb-0">
        <thead class="table-light">
          <tr>
            <th>Bill No / Date</th>
            <th class="text-end">Amount</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @bills.each do |bill_no, items| %>
            <% bill = items.first %>
            <tr>
              <td>
                <strong>#<%= bill_no %></strong><br>
                <small class="text-muted">
                  <%= bill.created_at.strftime("%d %b %Y") %>
                </small>
              </td>
              <td class="text-end fw-bold">
                â‚¹<%= number_with_precision(bill.bill_total, precision: 2) %>
              </td>
              <td class="text-center">
                <%= link_to "View",
                      view_customer_bill_path(bill.customer_id, bill_no),
                      class: "btn btn-sm btn-outline-primary" %>
              </td>
            </tr>
          <% end %>
          <% if @bills.empty? %>
            <tr>
              <td colspan="3" class="text-center text-muted py-3">
                No bills found
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
